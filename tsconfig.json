{
    "compilerOptions": {
        "lib": [
            "es2015"
        ],
        "outFile": "./out/rctrando.js",
        "target": "ES5",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
    },
    "filesGlob": [
        "lib/openrct2.d.ts",
        "src/rctrando_init.ts",
        "src/base.ts",
        "src/rctrando.ts",
        "src/tests.ts",
        "src/ridetypes.ts",
        "src/modules/*.ts",
        "src/gui/*.ts"
    ]
}